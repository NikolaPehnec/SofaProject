<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_fighter_detail">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/fighter_name_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/activity_vertical_margin"
            android:layout_marginTop="@dimen/activity_vertical_margin_large"
            android:text="@string/name_label"
            android:theme="@style/Theme.SofaProject.FighterTextLarge"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/fighter_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/activity_horizontal_margin_small"
            android:theme="@style/Theme.SofaProject.FighterTextMediumEmphasized"
            app:layout_constraintBottom_toBottomOf="@+id/fighter_name_label"
            app:layout_constraintStart_toEndOf="@+id/fighter_name_label"
            app:layout_constraintTop_toTopOf="@+id/fighter_name_label"
            tools:text="Ime i prezime" />

        <TextView
            android:id="@+id/nickname_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_vertical_margin_large"
            android:text="@string/nickname_label"
            android:theme="@style/Theme.SofaProject.FighterTextLarge"
            app:layout_constraintStart_toStartOf="@+id/fighter_name_label"
            app:layout_constraintTop_toBottomOf="@+id/fighter_name_label" />

        <TextView
            android:id="@+id/nickname"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/activity_horizontal_margin_small"
            android:theme="@style/Theme.SofaProject.FighterTextMediumEmphasized"
            android:textAlignment="textStart"
            app:layout_constraintBottom_toBottomOf="@+id/nickname_label"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintStart_toEndOf="@+id/nickname_label"
            app:layout_constraintTop_toTopOf="@+id/nickname_label"
            tools:text="Nadimak" />

        <TextView
            android:id="@+id/height_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_vertical_margin_large"
            android:text="@string/height_label"
            android:theme="@style/Theme.SofaProject.FighterTextLarge"
            app:layout_constraintStart_toStartOf="@+id/nickname_label"
            app:layout_constraintTop_toBottomOf="@+id/nickname_label" />

        <TextView
            android:id="@+id/height"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/activity_horizontal_margin_small"
            android:theme="@style/Theme.SofaProject.FighterTextMediumEmphasized"
            app:layout_constraintBottom_toBottomOf="@+id/height_label"
            app:layout_constraintStart_toEndOf="@+id/height_label"
            app:layout_constraintTop_toTopOf="@+id/height_label"
            tools:text="120 cm" />

        <TextView
            android:id="@+id/weight_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_vertical_margin_large"
            android:text="@string/weight_label"
            android:theme="@style/Theme.SofaProject.FighterTextLarge"
            app:layout_constraintStart_toStartOf="@+id/height_label"
            app:layout_constraintTop_toBottomOf="@+id/height_label" />

        <TextView
            android:id="@+id/weight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/activity_horizontal_margin_small"
            android:theme="@style/Theme.SofaProject.FighterTextMediumEmphasized"
            app:layout_constraintBottom_toBottomOf="@+id/weight_label"
            app:layout_constraintStart_toEndOf="@+id/weight_label"
            app:layout_constraintTop_toTopOf="@+id/weight_label"
            tools:text="120 kg" />

        <TextView
            android:id="@+id/reach_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_vertical_margin_large"
            android:text="@string/reach_label"
            android:theme="@style/Theme.SofaProject.FighterTextLarge"
            app:layout_constraintStart_toStartOf="@+id/weight_label"
            app:layout_constraintTop_toBottomOf="@+id/weight_label" />

        <TextView
            android:id="@+id/reach"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/activity_horizontal_margin_small"
            android:theme="@style/Theme.SofaProject.FighterTextMediumEmphasized"
            app:layout_constraintBottom_toBottomOf="@+id/reach_label"
            app:layout_constraintStart_toEndOf="@+id/reach_label"
            app:layout_constraintTop_toTopOf="@+id/reach_label"
            tools:text="120 cm" />

        <TextView
            android:id="@+id/stance_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_vertical_margin_large"
            android:text="@string/stance_label"
            android:theme="@style/Theme.SofaProject.FighterTextLarge"
            app:layout_constraintStart_toStartOf="@+id/reach_label"
            app:layout_constraintTop_toBottomOf="@+id/reach_label" />

        <TextView
            android:id="@+id/stance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/activity_horizontal_margin_small"
            android:theme="@style/Theme.SofaProject.FighterTextMediumEmphasized"
            app:layout_constraintBottom_toBottomOf="@+id/stance_label"
            app:layout_constraintStart_toEndOf="@+id/stance_label"
            app:layout_constraintTop_toTopOf="@+id/stance_label"
            tools:text="Orthodox" />

        <TextView
            android:id="@+id/win_draw_lose_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_vertical_margin_large"
            android:text="@string/win_draw_lose_label"
            android:theme="@style/Theme.SofaProject.FighterTextLarge"
            app:layout_constraintStart_toStartOf="@+id/stance_label"
            app:layout_constraintTop_toBottomOf="@+id/stance_label" />

        <TextView
            android:id="@+id/win_draw_lose"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/activity_horizontal_margin_small"
            android:theme="@style/Theme.SofaProject.FighterTextMediumEmphasized"
            app:layout_constraintBottom_toBottomOf="@+id/win_draw_lose_label"
            app:layout_constraintStart_toEndOf="@+id/win_draw_lose_label"
            app:layout_constraintTop_toTopOf="@+id/win_draw_lose_label"
            tools:text="1-2-3" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>