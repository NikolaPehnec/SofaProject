<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="@string/localization">
        <ListPreference
            app:defaultValue="English"
            app:entries="@array/languages"
            app:entryValues="@array/languages"
            app:key="@string/language_pref_key"
            app:title="@string/language_pref_title"
            app:useSimpleSummaryProvider="true" />

    </PreferenceCategory>

    <PreferenceCategory app:title="@string/theme">

        <SwitchPreferenceCompat
            app:key="@string/dark_theme_pref_key"
            app:title="@string/dark_theme"
            app:useSimpleSummaryProvider="true" />
    </PreferenceCategory>

</PreferenceScreen>