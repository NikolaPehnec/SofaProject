<resources>
    <!-- Base application theme. -->
    <style name="Theme.SofaProject" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/blue</item>
        <item name="fontFamily">@font/montserrat_family</item>

        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.SofaProject.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.SofaProject.Titles">
        <item name="android:textSize">26sp</item>
        <item name="android:textColor">@color/blue</item>
        <item name="android:textAlignment">center</item>
        <item name="fontFamily">@font/montserrat_family</item>
    </style>

    <style name="Theme.SofaProject.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.SofaProject.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>